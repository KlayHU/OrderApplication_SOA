<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.klay.mapper.UserMapper">
    <select id="login" resultType="com.klay.entity.User">
        select * from t_user where username=#{param1} and password=#{param2}
    </select>

    <select id="signUp" resultType="com.klay.entity.User">
        count (1) from t_user where username = #{param1}
    </select>
</mapper>